<p style="color: green"><%= notice %></p>

<div  class="container" >
  <h1>Noticias</h1>


  <form>
    <input name="categoria" <%= @news %> >
    <button type=”submit”>Buscar</button>
  </form>

  <div id="news">
    <div class="row">
      <% @news.each do |news| %>

        <div class="col">
            <%= render news %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center boton01">
      <%= link_to "NUEVA NOTICIA", new_news_path, class: "btn btn-warning col-3" %>
  </div>

    <div class="row justify-content-center boton01">
      <%= link_to "Volver a inicio", home_index_path, class: "btn btn-info col-3" %>
  </div>
</div>