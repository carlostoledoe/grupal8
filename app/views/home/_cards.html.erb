<% @dep = "/news?category=1" %>
<% @far = "/news?category=2" %>
<% @nac = "/news?category=3" %>
<% @int = "/news?category=4" %>
<% @pol = "/news?category=5" %>

<% @dep_img = "01dep.jpg" %>
